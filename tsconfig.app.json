{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "./configs/tsbase"
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./types",
    "declarationMap": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
